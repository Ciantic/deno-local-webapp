{
  "permissions": {
    "default": {
      "net": true,
      "env": true
    }
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable", "node", "dom"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "tasks": {
    "dev": "vite",
    "build": "vite build",
    "preview": "deno run -P --watch-hmr --unstable-raw-imports ./deno/server.ts"
  },
  "imports": {
    "@trpc/client": "npm:@trpc/client@^11",
    "@trpc/server": "npm:@trpc/server@^11",
    "solid-js": "npm:solid-js@^1.9.11",
    "zod": "npm:zod@4",

    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "vite": "npm:vite@^7.3.1",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.11.10",
    "vite-plugin-singlefile": "npm:vite-plugin-singlefile@^2.3.0",

    "@std/assert": "jsr:@std/assert@1"
  },
  "nodeModulesDir": "auto"
}
